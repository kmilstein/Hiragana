<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oaklandcc.FXMLController">
   <children>
      <Label fx:id="characterLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="68.0" layoutY="34.0" prefHeight="146.0" prefWidth="180.0" textAlignment="CENTER">
         <font>
            <Font size="80.0" />
         </font>
      </Label>
      <TextField fx:id="answerTextField" layoutX="84.0" layoutY="196.0" promptText="Enter your guess" />
      <Label fx:id="scoreLabel" alignment="CENTER" layoutX="40.0" layoutY="267.0" prefHeight="18.0" prefWidth="236.0" textAlignment="CENTER" />
      <Button fx:id="submitButton" layoutX="96.0" layoutY="228.0" mnemonicParsing="false" onMouseClicked="#submitAnswer" text="Submit" />
      <Button layoutX="158.0" layoutY="228.0" mnemonicParsing="false" onAction="#onReset" text="Reset" />
      <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="300.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onClose" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
